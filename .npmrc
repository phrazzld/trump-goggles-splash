# Strict pnpm configuration
engine-strict=true
save-exact=true
auto-install-peers=true
strict-peer-dependencies=false

# Prevent npm and yarn from being used
use-lockfile-v9=true
lockfile=true

# Performance optimizations
shamefully-hoist=false
hoist-pattern[]="*"

# Only allow pnpm
only-allow-pnpm=true